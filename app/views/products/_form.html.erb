<%= form_for(@product, :builder => BootStrapFormBuilder, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @product.errors.any? %>
    <div class="col-md-4 row">
      <h2><%= pluralize(@product.errors.count, "error") %> exceeds</h2>

      <ul class="list-group">
      <% @product.errors.full_messages.each do |message| %>
        <li class="list-group-item"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
  <%= f.text_field :name %>
  <%= f.text_field :price %>
  <%= f.text_field :cat_number %>
  <%= f.text_area :description %>
  

  <div class="form-group">
    <%= f.label %(Akcja) , :class => "col-md-4 control-label"  %>
    <div class="col-md-8">
      <%= f.submit "WyÅ›lij", :action => "products#index" , :class => "btn btn-success"%>
    </div>
  </div>

    
  </fieldset>

<% end %>