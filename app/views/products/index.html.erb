<legend>Listing products</legend>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Catalog number</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.catalog_number %></td>
        <td><%= product.description %></td>
        <td>
        <%= link_to 'Show', product , class: "btn btn-default" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary"  %>
        <%= link_to 'Destroy',{:action => 'delete', :id => product}, class: "btn btn-danger"  %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-success'%>
