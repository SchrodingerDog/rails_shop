<div class="row">	
	<ul class="list-group col-md-4">
	  
	  <% @product.attributes.each do |k, v| %>
	  	<%=
	  	case k
	  	when "picture"
	  		link_to(@product.picture, class: "list-group-item active") {
				concat content_tag(:h4, "Picture", class: "list-group-item-heading")
				concat content_tag(:p, @product.picture, class: "list-group-item-text")
			}
		when "category_id"
			link_to(category_path(@product.category), class: "list-group-item active") {
				concat content_tag(:h4, "Category", class: "list-group-item-heading")
				concat content_tag(:p, @product.category.name, class: "list-group-item-text")
			}
		else
	  	content_tag(:li, class: "list-group-item") { 
		  	concat content_tag(:h4, StringsHelper::prettify(k), class: "list-group-item-heading")
		  	concat content_tag(:p, StringsHelper::prettify(v), class: "list-group-item-text")
	  	}		
	  	end
	 #  	 if k != "category_id"
		# elsif k == "picture"
		
		# else
	 #  	end  
	  		
	  	%>
	  <% end %>
	</ul>
</div>
<div class="row">
	<%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-primary" %>
	<%= link_to 'Back', products_path, :class => "btn btn-default" %>
</div>
