<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Parent</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.parent_id %></td>
        <td>
        <%= link_to 'Show', category , class: "btn btn-default" %>
        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary"  %>
        <%= link_to 'Destroy',delete_category_path(category), class: "btn btn-danger"  %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-success'%>