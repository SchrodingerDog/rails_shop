<!DOCTYPE html>
<html lang="pl">
<head>
  <title>ShopApp</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap.min', :cache => true, media: 'all', 'data-turbolinks-track' => true %>
  
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <%= csrf_meta_tags %>
</head>
<body>

    <!-- Fixed navbar -->
 <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'ShopApp', root_path, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li <%= 'class=active' if params[:controller] == 'products' %>>
              <%= link_to 'Products', products_path %>
            </li>
            <li <%= 'class=active' if params[:controller] == 'categories' %>>
              <%= link_to 'Categories', categories_path %>
            </li>
            <li <%= 'class=active' if params[:controller] == 'application' %>>
              <%= link_to 'Root', root_path %>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
    <% flash.each do |name, msg| -%>
      <% if flash[:notice] %>
        <%= content_tag :div, msg, class: 'alert alert-success' %>
      <% elsif flash[:alert] %>
        <%= content_tag :div, msg, class: 'alert alert-danger' %>
      <% end %>
    <% end %>
<%= yield %>

</div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap.min' %>
</body>
</html>
